@viewModel ThermostatScheduler.WebApp.Pages.HeatingZones.HeatingZoneEdit.HeatingZoneEditViewModel, ThermostatScheduler.WebApp
@masterPage Pages/MasterPage.dotmaster
@import ThermostatScheduler.WebApp

<dot:Content ContentPlaceHolderID="MainContent">
    <div class="page-center">
        <dot:RouteLink RouteName="{resource: Routes.HeatingZones.HeatingZoneList}" Text="Zpět" class="page-button btn-back btn-long" />
        <div class="page-box">
            <h1>Úprava topné zóny</h1>

            <div class="form-group">
                <label class="control-label">Název zóny</label>
                <div Validator.Value="{value: Model.Name}">
                    <dot:TextBox class="form-control"
                                 Text="{value: Model.Name}"
                                 autofocus="true" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Kód zóny</label>
                <div Validator.Value="{value: Model.Code}">
                    <dot:TextBox class="form-control"
                                 Text="{value: Model.Code}" />
                </div>
            </div>

            <div class="btn-container">
                <dot:Button Text="Uložit"
                            Click="{command: Save()}"
                            class="page-button" />
            </div>
        </div>
    </div>
</dot:Content>

