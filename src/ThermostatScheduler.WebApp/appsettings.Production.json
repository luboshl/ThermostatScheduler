{
  "Persistence": {
    "FilePath": "/data/data.json"
  },
  "Mqtt": {
    "ClientId": "Scheduler-PROD",
    "ServerAddress": "172.16.1.12",
    "ServerPort": 1883,
    "CommunicationTimeout": "00:00:05",
    "Username": "mqttuser",
    "Password": "<configured in user secrets>"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning"
      }
    },
    "WriteTo": {
      "console-id": {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.SystemConsoleTheme::Literate, Serilog.Sinks.Console",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} [{Level:u3}] {Message:lj} [{SourceContext}] {Exception}{NewLine}"
        }
      },
      "file-id": {
        "Name": "File",
        "Args": {
          "path": "/logs/ThermostatScheduler.WebApp-.log",
          "rollingInterval": "Day",
          "outputTemplate":
            "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj} [{SourceContext}] {Exception}{NewLine}"
        }
      }
    }
  }
}